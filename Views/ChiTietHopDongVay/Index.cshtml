@model PagedList.IPagedList<QuanlyNganHang.Models.tblChiTiethopdongvay>
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
  
</head>
<body>
    <p>
        @Html.ActionLink("Tìm kiếm", "Find")

    </p>
    <table class="table">
        <tr>
            <th>
                Sohopdong
            </th>
            <th>
                Manguyente
            </th>
            <th>
                Soluong
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sohopdong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manguyente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soluong)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Sohopdong, id2 = item.Manguyente }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Sohopdong, id2 = item.Manguyente }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Sohopdong, id2 = item.Manguyente })|
                    @Html.ActionLink("Tạo mới", "Create")

                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

</body>
</html>
