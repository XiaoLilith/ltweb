@model PagedList.IPagedList<QuanlyNganHang.Models.tblHopDongvay>
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body>
    <p>
        @Html.ActionLink("Tìm kiếm", "Find")

    </p>
    <table class="table">
        <tr>
            <th>
                Sohopdong
            </th>
            <th>
                Ngaylaphopdong
            </th>
            <th>
                Machinhanh
            </th>
            <th>
                Makhachhang
            </th>
            <th>
                Mathoihan
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sohopdong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaylaphopdong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Machinhanh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Makhachhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mathoihan)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Sohopdong }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Sohopdong }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Sohopdong })
                    @Html.ActionLink("Tạo mới", "Create")

                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

</body>
</html>
